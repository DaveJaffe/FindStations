<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.djradio2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/radio_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/radio_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.DJRadio2"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.DJRadio2.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.djradio2.SettingsActivity"
            android:label="Settings"></activity>
    </application>

</manifest>